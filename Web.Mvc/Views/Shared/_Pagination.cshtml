@model Web.Mvc.Models.Pager

@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a class="lnk-pager" data-currentpage="1" href="~/Appointment/GetAllAppointments">First</a> &nbsp|   &nbsp
            </li>
            <li>
                <a class="lnk-pager" data-currentpage="@(Model.CurrentPage - 1)" href="~/Appointment/GetAllAppointments?page=@(Model.CurrentPage - 1)">Previous</a> &nbsp|   &nbsp
            </li>
        }

        @for (var pageNo = Model.StartPage; pageNo <= Model.EndPage; pageNo++)
        {
            <li class="@(pageNo == Model.CurrentPage ? "active" : "")">
                <a class="lnk-pager" data-currentpage="@pageNo" href="Appointment/GetAllAppointments?page=@pageNo">@pageNo</a>&nbsp|   &nbsp
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a class="lnk-pager" data-currentpage="@(Model.CurrentPage + 1)" href="~/Appointment/GetAllAppointments?page=@(Model.CurrentPage + 1)">Next</a>&nbsp|   &nbsp
            </li>
            <li>
                <a class="lnk-pager" data-currentpage="@(Model.TotalPages)" href="~/Appointment/GetAllAppointments?page=@(Model.TotalPages)">Last</a>&nbsp|   &nbsp
            </li>
        }
    </ul>
}