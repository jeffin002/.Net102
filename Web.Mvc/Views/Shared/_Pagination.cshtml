@model Web.Mvc.Models.Pager

@if (Model.EndPage > 1)
{
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li>
                <a href="~/Home/Index">First</a>
            </li>
            <li>
                <a href="~/Home/Index?page=@(Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "")">
                <a href="~/Home/Index?page=@page">@page</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a href="~/Home/Index?page=@(Model.CurrentPage + 1)">Next</a>
            </li>
            <li>
                <a href="~/Home/Index?page=@(Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
}