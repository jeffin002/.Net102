@model Model.Appointment

@{
    ViewData["Title"] = "Index";
}

@*<h1>APPOINTMENT</h1>*@
<input type="hidden" id="hdn-apoointment-id" value="@Model.Id"/>
@if( Model.Id > 0)
{
    <h4> Edit Appointment</h4>
 <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" readonly id="id" class="form-control" />                    
                </div>

                <div class="form-group">
                    <label asp-for="PetName" class="control-label"></label>
                    <input asp-for="PetName" readonly id="petname" class="form-control" />                    
                </div>

                <div class="form-group">
                    <label asp-for="DoctorName" class="control-label"></label>
                    <div class="select-wrapper">
                        @Html.DropDownListFor(m => m.SelectedDoctorId,Model.DoctorList,new{@id="ddl-doctor"})
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    @*<textarea asp-for="Description" id="description" value="@Model.Description" class="form-control" />*@
                    <textarea maxlength="100" id="description" class="form-control" rows="4" cols="20">@Model.Description</textarea>
                    <span class="spndescription"></span>
                </div>
            </form>
        </div>
    </div>

}
else
{

 <h4> Create Appointment</h4>
 <hr />
 <div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PetName" class="control-label"></label>
                <input asp-for="PetName" id="petname" class="form-control" />
                <span class="spnpetname"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetType" class="control-label"></label>
                <div class="select-wrapper">
                <select id="petTypeSelect" class="form-control">
                    <option value="0">Select a pet breed</option>
                    <option value="1">Cat</option>
                    <option value="2">Dog</option>
                    <option value="3">Rabbit</option>
                </select>
                <span class="spnpetid"></span>
                </div>
            </div>

            <div class="form-group hidden " id="dvbreedtype">
                <label asp-for="PetBreed"  class="control-label"></label>
                <div class="select-wrapper">
                <select id="ddl-breed"  class="form-control ">                   
                </select>
                <span class="spnpetbreed"></span>
                </div>
            </div>

            <div class="form-group ">
                <label asp-for="DoctorName" class="control-label"></label>  
                <div class="select-wrapper">
                    <select id="ddl-doctor" class="form-control">                        
                    </select>
                    <span class="spndoctorname"></span>                
            </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" id="description" class="form-control" />
                <span class="spndescription"></span>
            </div>
           
        </form>
    </div>
 </div>
 
}

<div class="form-group margin-30">
    <input type="submit" id="btncreate" value="@(Model.Id > 0 ? "Update" : "Create")" class="btn btn-primary" />
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
